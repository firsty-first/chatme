<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <TextView
        android:id="@+id/nameDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     android:background="#085AB4"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:padding="9dp"
        android:paddingStart="28dp"
        android:text="Name" />

    <ImageView
        android:id="@+id/profilephotoDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#B1C8E1"
        android:maxHeight="80dp"
        android:maxWidth="70dp"
        android:src="@drawable/defaultuserprofile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D3DCE6"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/messageBtnDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_chat_24" />

        <ImageView
            android:id="@+id/calllBtnDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_call_24" />
    </LinearLayout>
</LinearLayout>