<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_margin="0dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/attachment"
            android:layout_width="255dp"
            android:layout_height="192dp"
            android:visibility="gone"
            android:src="@drawable/new_nochatbg"/>
        <TextView
            android:id="@+id/messagesender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/chatcard_background_newui"
            android:backgroundTint="@color/themelightchatcard"
            android:fontFamily="@font/nats_regular"

            android:lineHeight="16sp"
            android:paddingHorizontal="21dp"
            android:paddingVertical="9dp"

            android:text="Message will be displayed here "
            android:textColor="#535353"
            android:textSize="18sp"

            android:gravity="end"/>
        <TextView
            android:id="@+id/timestampSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/nats_regular"
            android:text="14:00"
            android:textSize="12sp"
            android:gravity="center"/>
        <LinearLayout
            android:id="@+id/files"
            android:layout_width="100dp"
            android:visibility="gone"
            android:layout_height="30dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/filename"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="name" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>