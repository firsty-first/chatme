<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="34dp"
                    android:gravity="left"
                    android:text="Devabrath Sahu"
                    android:textStyle="bold"
                    android:textAlignment="gravity"
                    android:textColor="#10334e"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="60dp"
                    android:gravity="left"
                    android:text="Hyderabad | within 35 KM"
                    android:textAlignment="gravity"
                    android:textSize="16dp"
                    android:textColor="#436377" />

                <ProgressBar
                    android:id="@+id/progressBar10"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="70dp"
                    android:progress="10"
                    android:max="100"
                    android:progressDrawable="@drawable/progressbar"
                    android:progressTint="#143d59"
                    android:minHeight="15dp"
                    android:layout_marginTop="90dp"
                    android:gravity="left"
                    android:textAlignment="gravity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="145dp"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:text="App Developer | 1 year of experience"
                    android:maxLength="39"
                    android:textAlignment="gravity"
                    android:textColor="#10334e"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="168dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="left"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:maxLength="100"
                    android:text="Hi community! I am available at your service !"
                    android:textSize="16dp"
                    android:textColor="#436377" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:text="+ INVITE"
                    android:textSize="16dp"
                    android:visibility="gone"
                    android:textColor="#10334e"/>

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/bluebg"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="12dp"/>

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/bgyellow"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="12dp"/>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="75dp"
            android:id="@+id/userImg"
            android:layout_height="85dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            app:cardBackgroundColor="#b8c5cd"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout5"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/parrot"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout5"
                app:layout_constraintTop_toTopOf="parent"
                />

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>